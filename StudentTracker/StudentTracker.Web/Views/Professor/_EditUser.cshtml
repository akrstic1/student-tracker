@model StudentTracker.Model.Professor

<input type="hidden" id="id" name="id" value="@Model.ProfessorId"/>
<input type="hidden" asp-for="ProfessorId"/>

<div class="form-group">
    <label class="control-label">Full name</label>
    <input asp-for="FullName" type="text" class="form-control"/>
    <span asp-validation-for="FullName" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Address</label>
    <input asp-for="Address" type="text" class="form-control"/>
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Phone</label>
    <input asp-for="Phone" type="text" class="form-control"/>
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>

<partial name="_ValidationScriptsPartial"/>